<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1400.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2_2.HWAddController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Label text="Предмет">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="txtSubject" prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
                <Label text="Домашнє завдання" textAlignment="CENTER">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="txtHomeWork" prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Label text="Дедлайн">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
            <DatePicker fx:id="datePicker" prefHeight="100.0" prefWidth="980.0" />
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="230.0">
            <children>
                <Label prefHeight="47.0" prefWidth="129.0" text="Статус">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="txtStatus" prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#actionSave" prefHeight="119.0" prefWidth="361.0" text="Зберегти" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#actionClose" prefHeight="119.0" prefWidth="361.0" text="Відмінити" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
