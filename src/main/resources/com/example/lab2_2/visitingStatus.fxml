<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" stylesheets="@style.css" prefHeight="900.0" prefWidth="1400.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2_2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Готовий закрити пропуск?">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
            <VBox.margin>
                <Insets bottom="80.0" top="-60.0" />
            </VBox.margin>
        </Label>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Label text="Предмет">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Label text="Дата">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="70.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="230.0">
            <children>
                <Label prefHeight="47.0" prefWidth="129.0" text="Статус">
                    <font>
                        <Font size="38.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-10.0" />
                    </HBox.margin>
                </Label>
                <TextField prefHeight="82.0" prefWidth="997.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
            <children>
                <Button fx:id="okVStatus" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openVAfterStatus" prefHeight="119.0" prefWidth="361.0" text="Зберегти" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Button>
                <Button fx:id="cancelVAfterStatus" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#yesVStatus" prefHeight="119.0" prefWidth="361.0" text="Відмінити" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
